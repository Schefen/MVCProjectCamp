@using EntityLayer.Concrete
@model List<Header>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Kategori</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.HeaderId</td>
                    <td>@item.HeaderName</td>
                    <td>@item.Category.CategoryName</td>
                </tr>
            }
</table>
<br />
<a href="/Header/AddHeader/" class="btn btn-info">Yeni Başlık Girişi</a>


