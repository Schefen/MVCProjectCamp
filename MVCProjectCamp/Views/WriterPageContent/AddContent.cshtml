@model EntityLayer.Concrete.Content
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<h1>İçerik Girişi</h1>
@using (Html.BeginForm("AddContent", "WriterPageContent", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" name="HeaderId" value="@ViewBag.d"/>
        @Html.Label("İçeriğinizi Yazınız")
        @Html.TextAreaFor(x => x.ContentText,10,30, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ContentText)
        <button class="btn btn-info">Kaydet</button>
    </div>
}

